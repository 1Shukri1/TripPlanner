@page
@model RegisterModel
@{
    ViewData["Title"] = "Регистрация";
}

<h1>@ViewData["Title"]</h1>

<div class="row">
    <div>
        <br><br><br><br>@*<br>*@

        <section style=" ">
            <div class="container h-100">
                <div class="row d-flex justify-content-center align-items-center h-100">
                    <div class="col-lg-12 col-xl-11">
                        <div class="card text-black" style="border-radius: 25px;">
                            <div class="card-body p-md-5">
                                <div class="row justify-content-center">
                                    <div class="col-md-10 col-lg-6 col-xl-5 order-2 order-lg-1">

                                        <p class="text-center h1 fw-bold mb-5 mx-1 mx-md-4 mt-4">Регистрация</p>

                                        <form asp-route-returnUrl="@Model.ReturnUrl" method="post" class="mx-1 mx-md-4">
                                            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                                            <div class="d-flex flex-row align-items-center mb-4">
                                                <i style="margin-bottom:28px;" class="fa-solid fa-user fa-lg me-3 fa-fw"></i>
                                                <div class="form-outline flex-fill mb-0">
                                                    <input type="text" asp-for="Input.Name" class="form-control" autocomplete="username" aria-required="true" id="form3Example3c" />
                                                    <label asp-for="Input.Name">Име</label>
                                                    <span asp-validation-for="Input.Name" class="text-danger"></span>
                                                </div>
                                            </div>

                                            <div class="d-flex flex-row align-items-center mb-4">
                                                <i style="margin-bottom:28px;" class="fas fa-envelope fa-lg me-3 fa-fw"></i>
                                                <div class="form-outline flex-fill mb-0">
                                                    <input asp-for="Input.Email" class="form-control" autocomplete="username" aria-required="true" id="form3Example3c" />
                                                    <label asp-for="Input.Email">И-мейл</label>
                                                    <span asp-validation-for="Input.Email" class="text-danger"></span>
                                                </div>
                                            </div>

                                            <div class="d-flex flex-row align-items-center mb-4">
                                                <i style="margin-bottom:28px;" class="fas fa-lock fa-lg me-3 fa-fw"></i>
                                                <div class="form-outline flex-fill mb-0">
                                                    <input asp-for="Input.Password" id="form3Example4c" autocomplete="new-password" aria-required="true" class="form-control" />
                                                    <label asp-for="Input.Password" class="form-label" for="form3Example4c">Парола</label>
                                                    <span asp-validation-for="Input.Password" class="text-danger"></span>
                                                </div>
                                            </div>

                                            <div class="d-flex flex-row align-items-center mb-4">
                                                <i style="margin-bottom:28px;" class="fas fa-key fa-lg me-3 fa-fw"></i>
                                                <div class="form-outline flex-fill mb-0">
                                                    <input asp-for="Input.ConfirmPassword" id="form3Example4cd" autocomplete="new-password" aria-required="true" class="form-control" />
                                                    <label asp-for="Input.ConfirmPassword" class="form-label" for="form3Example4cd">Повтори парола</label>
                                                    <span asp-validation-for="Input.ConfirmPassword" class="text-danger"></span>
                                                </div>
                                            </div>

                                            <div class="d-flex justify-content-center mx-4 mb-3 mb-lg-4">
                                                <button type="submit" class="btn btn-primary btn-lg">Регистрация</button>
                                                @*<button id="registerSubmit" type="submit" class="w-100 btn btn-lg btn-primary">Register</button>*@
                                            </div>

                                        </form>

                                    </div>
                                    <div class="col-md-10 col-lg-6 col-xl-7 d-flex align-items-center order-1 order-lg-2">

                                        <img src="https://mdbcdn.b-cdn.net/img/Photos/new-templates/bootstrap-registration/draw1.webp"
                                             class="img-fluid" alt="Sample image">

                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </section>

    </div>

</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
<style>
    body{
        background-color: #eee;
    }
</style>