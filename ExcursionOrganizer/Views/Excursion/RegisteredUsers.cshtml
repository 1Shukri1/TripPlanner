@*Изглед за визуализиране(показване) на потребителите, записани в дадените екскурзии*@

@using ExcursionOrganizer.Data.Models;
@model List<User>
@*@model List<dynamic>*@

<h2 style="margin-top:80px;" class="d-flex justify-content-center">Записани потребители за екскурзията</h2>

@if (Model.Count > 0)
{
    <table class="table table-striped">
        <thead>

            <tr>
                <th scope="col">Потребителско име</th>
                <th scope="col">И-мейл</th>
                <th scope="col">Опция</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var users in Model)
            {
                <tr>
                    <td>@users.Email</td>
                    <td>@users.UserName</td>
                    <td>
                     @* <form method="post" asp-action="UnsubscribeFromExcursion" asp-controller="Excursion" asp-route-excursionId="@ViewBag.ExcursionId">
                    <input type="hidden" name="excursionId" value="@ViewBag.ExcursionId" />
                    <button type="submit" class="btn btn-danger" style="font-size:18px;"> Отпиши </button>
                    </form>*@
                        <form method="post" asp-action="UnsubscribeUserFromExcursionByAdmin" asp-controller="Excursion" asp-route-excursionUserId="@ViewBag.ExcursionId">
                            <input type="hidden" name="excursionId" value="@ViewBag.ExcursionId" />
                            <button type="submit" class="btn btn-danger" style="font-size: 18px;"> Отпиши потребителя </button>
                        </form>


                    </td>
                </tr>
            }
        </tbody>
    </table>
    <br>
    <br>
    <div class="d-flex justify-content-center">
        <p style="font-size: 18px;"> Броя на записаните участници за екскурзията: @Model.Count</p>
    </div>
}
else
{
    <br>
    <br>
    <p class="d-flex justify-content-center " style="font-size:19px; font-family:'Gill Sans', 'Gill Sans MT', Calibri, 'Trebuchet MS', sans-serif;">Няма записани участници за тази екскурзия.</p>
}
