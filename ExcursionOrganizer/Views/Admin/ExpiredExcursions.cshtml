@model ICollection<ExcursionOrganizer.Models.InputExcursionModel>
<div class="page-heading header-text">
    <div class="container">
        <div class="row">
            <div class="col-lg-12">
                <span class="breadcrumb"><a href="#">Начало</a> / Неактивни екскурзии</span>
                <h3>Неактивни екскурзии</h3>
            </div>
        </div>
    </div>
</div>

<div class="section properties">
    <main class="mt-5">
        <div class="container">
            <div class="container">
                <div class="row properties-box">
                    @if (Model.Any())
                    {
                        @foreach (var item in Model)
                        {
                            <div class="col-lg-4 col-md-6 align-self-center mb-30 properties-items col-md-6 adv">
                                <div class="item rounded shadow-lg p-3 mb-5 bg-white  ">
                                    <a asp-controller="excursion" asp-action="Details" asp-route-id="@item.Id"><img src="@item.ImgURL" style="height: 250px;" alt=""></a>
                                    @if (item.Status == "Периодична")
                                    {
                                        <span class="category" style="background-color:#ffa14a; color:white;">@item.Status</span>
                                    }
                                    else if (item.Status == "Активна")
                                    {
                                        <span class="category" style="background-color:#55d89b; color:white;">@item.Status</span>
                                    }
                                    else
                                    {
                                        <span class="category" style="background-color:red; color:white;">@item.Status</span>
                                    }
                                    <h6>@item.Price лв.</h6>
                                    <h4 style="white-space:nowrap; overflow:hidden; text-overflow:ellipsis;"><a asp-controller="excursion" asp-action="Details" asp-route-id="@item.Id">@item.Destination</a></h4>
                                    <ul>
                                        <li>Транспорт: <span>@item.Transport</span></li>
                                        <li>Начало: <span>@item.StartDate.ToShortDateString()</span></li>
                                        <li>Край: <span>@item.EndDate.ToShortDateString()</span></li>
                                        <li>
                                            Места:
                                            @if (item.MaxParticipants >= 1)
                                            {
                                                <span style="color:green;">@item.MaxParticipants</span>
                                            }
                                            else
                                            {
                                                <span style="color:red;"><i>НЯМА</i></span>
                                            }
                                        </li>
                                    </ul>
                                    @* <div class="main-button">
                            <a asp-controller="excursion" asp-action="Details" asp-route-id="@item.Id">Подробности</a>
                            </div>*@

                                    @if (item.Status == "Неактивна")
                                    {
                                        <div class="main-button">
                                            <a style="background-color:#349266;" asp-controller="excursion" asp-action="Edit" asp-route-id="@item.Id">Редактирай статуса</a>
                                        </div>
                                    }
                                    else if (item.StartDate < DateTime.Today)
                                    {
                                        <div class="main-button">

                                            <a style="background-color:#f35525;" asp-controller="excursion" asp-action="Edit" asp-route-id="@item.Id">Редактирай датата</a>
                                        </div>
                                    }
                                </div>
                            </div>
                        }
                    }
                    else
                    {
                        <div class="d-flex justify-content-center">
                            <h3 style="color:red;">Няма неактивни екскурзии!</h3>
                        </div>
                    }

                </div>
            </div>
            @*
            <div class="separator">
            <hr class="line" />
            <p class="section-header">От нашите екскурзии</p>
            <hr class="line" />
            </div>*@
            <br>

        </div>
    </main>
</div>